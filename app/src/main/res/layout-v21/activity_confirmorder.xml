<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/wallpaper"
    android:layout_height="match_parent"
    tools:context=".confirmorderActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Address"
            android:textStyle="bold"
            android:textSize="30sp"
            />
    </androidx.appcompat.widget.Toolbar>


    <EditText
        android:id="@+id/shimentnametext"
        android:layout_width="280dp"
        android:layout_height="40dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="198dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/input_design"
        android:hint="@string/namesss"
        android:inputType="text"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/shippingphonenumber"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_below="@id/shimentnametext"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="53dp"
        android:background="@drawable/input_design"
        android:hint="@string/phone_number"


        android:textAlignment="center" />

    <EditText
        android:id="@+id/shippingaddress"
        android:layout_width="280dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/input_design"
        android:hint="@string/fulladdress"
        android:inputType="textMultiLine"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/shippingpincode"
        android:layout_width="281dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="370dp"
        android:background="@drawable/input_design"
        android:hint="@string/pin_code"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="294dp"
        android:text="If you want you can change your state details in Settings.!" />

    <TextView
        android:id="@+id/displaystate"
        android:layout_width="281dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="427dp"
        android:background="@drawable/input_design"
        android:hint="@string/state"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:inputType="text"
        android:textAlignment="center" />

    <Button
        android:id="@+id/placeorder"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="226dp"
        android:background="@drawable/button"
        android:inputType="number"
        android:text="Proceed to payment" />

    <TextView
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="152dp"
        android:text="Your order will be send to you through courier, within a week the order will reach you.!"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/totalpriceamounts"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="606dp"
        android:gravity="center"
        android:text=""
        android:background="@drawable/input_design"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="13sp"
        android:textStyle="bold" />

</RelativeLayout>
