<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".HomActivity">


    <Button
        android:id="@+id/getotp"
        android:layout_width="179dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="666dp"

        android:background="@drawable/button"
        android:text="@string/button"
        android:visibility="visible" />

    <Button
        android:id="@+id/verifyotp"

        android:layout_width="179dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"


        android:layout_centerInParent="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="668dp"
        android:background="@drawable/button"
        android:text="@string/verifyotp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/phonin"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="245dp"
        android:background="@drawable/input_design"
        android:hint="@string/vds"
        android:importantForAutofill="no"
        android:inputType="phone" />

    <EditText
        android:id="@+id/otpn"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="189dp"
        android:background="@drawable/input_design"
        android:hint="@string/enter_otp"
        android:importantForAutofill="no"
        android:inputType="number"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinnerxm"
        android:layout_width="340dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="129dp"
        android:background="@drawable/input_design"
        android:tag="@string/phone_number"
        android:visibility="invisible"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="309dp"
        android:autofillHints=""
        android:background="@drawable/input_design"
        android:ems="10"
        android:hint="@string/new_in"
        android:inputType="textPersonName"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="190dp"
        android:autofillHints=""
        android:background="@drawable/input_design"
        android:ems="10"
        android:hint="@string/Password"
        android:inputType="textPassword"

        android:visibility="invisible" />

    <Button
        android:id="@+id/button4"

        android:layout_width="179dp"
        android:layout_height="37dp"


        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="200dp"


        android:layout_marginBottom="36dp"

        android:background="@drawable/button"
        android:text="@string/button1"
        android:visibility="invisible" />

</RelativeLayout>