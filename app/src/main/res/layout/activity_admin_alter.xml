<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/wallpapers"

    android:layout_centerInParent="true"

    app:cardElevation="15dp"
    tools:context=".AdminAlterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        >

        <EditText
            android:id="@+id/product_names"
            android:layout_width="294dp"
            android:hint="@string/product_name"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="38dp"
            android:layout_marginTop="399dp"
            android:layout_marginEnd="31dp"
            android:background="@drawable/input_design"
            android:inputType="text"
            android:text="@string/product_namess"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/product_images"
            android:layout_width="261dp"
            android:layout_height="253dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="70dp"
            android:background="@drawable/uploadimage"
            android:scaleType="centerCrop"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/product_prices"
            android:layout_width="323dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="502dp"
            android:background="@drawable/input_design"
            android:inputType="number"
            android:hint="@string/product_price"
            android:text="@string/product_pricess"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/product_descriptions"
            android:layout_width="323dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="451dp"
            android:background="@drawable/input_design"
            android:inputType="text"
            android:text="@string/product_description"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:hint="@string/product_description"
            android:textStyle="bold" />

        <Button
            android:id="@+id/applychanges"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="600dp"
            android:layout_marginEnd="65dp"
            android:background="@drawable/button"
            android:text="@string/apply_changes" />

        <Button
            android:id="@+id/deleteproduct"
            android:layout_width="224dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="647dp"
            android:layout_marginEnd="64dp"
            android:visibility="visible"
            android:background="@drawable/button"
            android:text="@string/delete_prodcuct" />


    </RelativeLayout>


</RelativeLayout>