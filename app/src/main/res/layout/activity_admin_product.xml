<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login2"
    tools:context=".AdminProductActivity"


    >




    <LinearLayout
        android:id="@+id/LinearLayoutCategory1"
        android:layout_width="140dp"
        android:layout_height="wrap_content"


        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="246dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/fish"
            android:layout_width="97dp"
            android:layout_height="match_parent"
            android:src="@drawable/download" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutCategory2"
        android:layout_width="139dp"
        android:layout_height="186dp"


        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="246dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/aquariumaccessories"
            android:layout_width="97dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/b3fadaef9e35b501" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutCategory3"
        android:layout_width="135dp"
        android:layout_height="165dp"


        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="265dp"
        android:layout_marginTop="253dp"
        android:layout_marginEnd="-4dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/food"
            android:layout_width="97dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/food" />

    </LinearLayout>

    <Button
        android:id="@+id/alterdata"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="243dp"
        android:background="@drawable/button"
        android:text="@string/customise_product_details"
        android:textSize="20sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/placedorder1"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="184dp"

        android:background="@drawable/button"
        android:text="@string/check_placed_orders"
        android:textSize="20sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/LogoutBTN"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/button"
        android:text="@string/Logout"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>