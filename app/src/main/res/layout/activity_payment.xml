<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wallet_holo_blue_light"
    tools:context=".paymentActivity"

    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="347dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginBottom="-106dp"
        android:background="@drawable/hands" />

    <TextView
        android:id="@+id/payeename"
        android:layout_width="189dp"
        android:layout_height="84dp"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/input_design"
        android:hint="@string/payee_name"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/payeeID"
        android:layout_width="381dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="101dp"
        android:background="@drawable/input_design"

        android:hint="@string/upi_id"
        android:inputType="text"

        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="158dp"
        android:text="@string/total_amount_payable"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/paymentso"
        android:layout_width="347dp"
        android:layout_height="203dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="23dp"
        android:background="@color/wallet_highlighted_text_holo_dark"
        android:text=""
        android:textAlignment="center"

        android:textSize="90sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/payment"
        android:layout_width="189dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="181dp"
        android:background="@drawable/input_design"
        android:hint="@string/amount"
        android:padding="20dp"

        android:textAlignment="center"
        android:textSize="36sp"
        android:visibility="invisible" />


    <Button
        android:id="@+id/paywithgl"
        android:layout_width="269dp"
        android:layout_height="139dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="174dp"
        android:background="@drawable/gpay"
        android:padding="20sp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/transactionID"
        android:layout_width="185dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-8dp"
        android:background="@drawable/input_design"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="113dp"

        android:layout_marginBottom="183dp"
        android:text="click here to pay"
        android:textSize="22sp"
        android:textStyle="bold" />

</RelativeLayout>