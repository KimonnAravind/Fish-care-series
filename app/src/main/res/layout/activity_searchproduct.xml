<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchproductActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        ></androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/searchproduct"
            android:layout_width="242dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="61dp"
            android:background="@drawable/input_design"
            android:hint="@string/searchpro"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/search"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="58dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/button"
            android:text="@string/search" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="109dp"
            android:layout_marginEnd="-5dp">

            <Button
                android:id="@+id/seconds"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="306dp"
                android:background="@drawable/combo" />

            <Button
                android:id="@+id/secondss"
                android:layout_width="98dp"
                android:layout_height="76dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="203dp"
                android:background="@drawable/accessories" />

            <Button
                android:id="@+id/secondsss"
                android:layout_width="98dp"
                android:layout_height="69dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="99dp"
                android:background="@drawable/food" />

            <Button
                android:id="@+id/secondssss"
                android:layout_width="76dp"
                android:layout_height="69dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="46dp"
                android:background="@drawable/fishmedicing" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchList"
            android:layout_width="318dp"
            android:layout_height="596dp"
            android:layout_below="@+id/searchproduct"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="83dp"
            android:layout_marginBottom="0dp">

        </androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>





</RelativeLayout>