<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_endusers">


    <RelativeLayout
        android:layout_width="59dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#EAF0F1"

        >

        <TextView
            android:id="@+id/sbc"
            android:layout_width="83dp"
            android:layout_height="76dp"
            android:layout_gravity="end"
            android:text="@string/search_by_category"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/combos"
            android:layout_width="77dp"
            android:layout_height="74dp"

            android:layout_gravity="end"
            android:layout_marginTop="85sp"
            android:background="@drawable/combo" />


        <ImageView
            android:id="@+id/sec"
            android:layout_width="71dp"
            android:layout_height="74dp"
            android:layout_gravity="end"
            android:layout_marginTop="156dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/accessories" />

        <ImageView
            android:id="@+id/thr"
            android:layout_width="77dp"
            android:layout_height="63dp"
            android:layout_gravity="end"
            android:layout_marginTop="235dp"
            android:background="@drawable/food" />

        <ImageView
            android:id="@+id/frr"
            android:layout_width="64dp"
            android:layout_height="59dp"
            android:layout_gravity="end"
            android:layout_marginTop="305dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/fishmedicing" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_menu"
        android:layout_width="279dp"
        android:layout_height="668dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login1"
        android:scrollbars="vertical"
        app:reverseLayout="true"
        app:stackFromEnd="true">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.cardview.widget.CardView>