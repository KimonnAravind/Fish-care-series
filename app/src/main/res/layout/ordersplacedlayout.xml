<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="378dp"
        android:layout_height="309dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button">

        <TextView
            android:id="@+id/orderedusername"
            android:layout_width="144dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="4dp"

            android:text="@string/ordered_user_name"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/usersphonenumber"
            android:layout_width="144dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="212dp"
            android:layout_marginTop="6dp"
            android:text="@string/phone_number"

            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/costoforder"
            android:layout_width="144dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="114dp"
            android:layout_marginTop="70dp"
            android:text="@string/totalamt"
            android:textAlignment="center"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/Addressofthecus"
            android:layout_width="144dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="124dp"
            android:text="@string/address"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pincodeofuser"
            android:layout_width="144dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="224dp"
            android:layout_marginTop="122dp"
            android:text="@string/pincode"
            android:textAlignment="center"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/dateoforder"
            android:layout_width="144dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="199dp"
            android:text="@string/date"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/timeoforder"
            android:layout_width="144dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="164dp"
            android:layout_marginTop="198dp"
            android:text="@string/tim"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/showplacedproducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="85dp"
            android:layout_marginBottom="6dp"
            android:background="@android:color/white"
            android:text="Show this order products" />


    </RelativeLayout>

</RelativeLayout>